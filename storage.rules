rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isProjectMember(projectId) {
      let userCompanyId = firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.companyId;
      let projectCompanyId = firestore.get(/databases/(default)/documents/projects/$(projectId)).data.companyId;
      return userCompanyId == projectCompanyId;
    }

    function isAdmin() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Common condition for project file access
    function canAccessProjectFiles(projectId) {
      return request.auth != null &&
             firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             (isAdmin() || isProjectMember(projectId));
    }

    // Helper for Guest Access via Custom Claims
    function hasGuestUploadAccess(projectId) {
      return request.auth != null &&
             request.auth.token.guestProjectId == projectId &&
             (request.auth.token.guestPermissions.canUpload == true || request.auth.token.guestPermissions.isOwner == true);
    }

    // --- START: Add these rules for Temporary Guided Setup ---
    
    // Allow an authenticated user to write AND READ files to their own temporary upload folder
    match /temp_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow an authenticated user to read their own temporary previews (for thumbnails)
    match /temp_previews/{userId}/{allPaths=**} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }
    
    // Allow user to manage their own temporary source files (e.g., for cleanup)
    match /temp_sources/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ADD THIS RULE to allow admins to read from the path in your error
    match /temp_pages/{userId}/{allPaths=**} {
      // Allow read if user owns it OR if user is an admin
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }
    // --- END: New Rules ---


    // --- Existing Project Rules ---
    match /proofs/{allPaths=**} {
      // Existing logic: allow read, write: if request.auth != null;
      // We are tightening this slightly to allow specific guests or registered users
      // But to maintain backward compat with the broad rule:
      allow read, write: if request.auth != null;
      // NOTE: Ideally, this should be:
      // allow read, write: if canAccessProjectFiles(projectId) || hasGuestUploadAccess(projectId);
      // But since we can't easily extract projectId from "allPaths", we leave it broad for now.
    }

    // Specific rules for 'proofs/{projectId}/...' to demonstrate tighter control if needed:
    match /proofs/{projectId}/{allPaths=**} {
       allow read, write: if canAccessProjectFiles(projectId) || hasGuestUploadAccess(projectId);
    }

    match /uploads/{projectId}/{fileName} {
      allow write: if canAccessProjectFiles(projectId) || hasGuestUploadAccess(projectId);
    }
    // New rule for segregated guest uploads (prevents optimization trigger loop)
    match /guest_uploads/{projectId}/{allPaths=**} {
       allow read, write: if canAccessProjectFiles(projectId) || hasGuestUploadAccess(projectId);
    }
    match /sources/{projectId}/{fileName} {
      allow read, write: if canAccessProjectFiles(projectId);
    }
    match /previews/{projectId}/{fileName} {
      allow read, write: if canAccessProjectFiles(projectId);
    }
    match /final/{projectId}/{fileName} {
      allow read, write: if canAccessProjectFiles(projectId);
    }
  }
}
